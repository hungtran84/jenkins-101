pipeline {
    agent {
        label 'node1'
    }
    stages {
        stage('build') {
            steps {
                sh 'pip3 install -r s05/python-simple-app/requirements.txt'
            }
        }

        stage('run') {
            steps {
                sh 'python3 s05/python-simple-app/app.py &'
            }
        }

        stage('test') {
            steps {
                sh 'curl localhost:8000'
            }
        }
    }
}